# Supabase Configuration (Auto-configured by Lovable Cloud)
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key

# Backend Secrets (Configured in Lovable Cloud)
# These are server-side only and not exposed to the frontend
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
LOVABLE_API_KEY=auto_generated_by_lovable

# Database Configuration (Optional - for direct database connections)
# Only needed if connecting to external databases
DATABASE_CONNECTION_STRING=postgresql://user:password@host:port/database

# Application Settings
NODE_ENV=development
PORT=5173

# Feature Flags
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
MAX_FILE_SIZE_MB=20
MAX_DOCUMENTS_PER_UPLOAD=10

# AI Model Configuration
DEFAULT_AI_MODEL=google/gemini-2.5-flash
EMBEDDING_MODEL=text-embedding-004
MAX_TOKENS=2000

# Performance Settings
QUERY_TIMEOUT_MS=30000
MAX_CONCURRENT_QUERIES=10
CHUNK_SIZE_DEFAULT=750
CHUNK_OVERLAP=100

# Security
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=60
